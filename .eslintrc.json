{
    "extends": [
        "airbnb-base",
        "plugin:vue/recommended"
    ],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./resources/assets/js"]
                ],
                "extensions": [".js", ".vue", ".json"]
            }
        }
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-param-reassign": ["error", {
            "props": true,
            "ignorePropertyModificationsFor": ["state"]
        }],
        "no-underscore-dangle": ["error", {
            "allow": ["_mutations"]
        }]
    }
}
